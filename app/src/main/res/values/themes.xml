<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CropCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.CropCare" parent="Base.Theme.CropCare" />

    <!-- Secondary Button Style -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/secondary_button</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="strokeColor">@color/secondary_button</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="DangerButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/danger_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/danger_button</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="DisabledButtonStyleIcon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/disabled</item>
        <item name="iconTint">@color/disabled</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PrimaryButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="iconTint">@color/primary</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DangerButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/danger_button</item>
        <item name="iconTint">@color/danger_button</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>